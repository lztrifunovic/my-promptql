---
kind: ObjectType
version: v1
definition:
  name: customers
  fields:
    - name: account
      type: int_32!
      description: Account ID
    - name: address
      type: string
      description: Customer address
    - name: blacklisted
      type: boolean
      description: Blacklisted boolean true or false
    - name: customer_id
      type: int_32!
      description: Customer ID
    - name: dob
      type: date
      description: Date of birth
    - name: name
      type: string!
      description: Customer name
    - name: nationality
      type: string
      description: Customer country of origin
    - name: pep_status
      type: boolean
      description: PEP status
    - name: risk_level
      type: string
      description: High, medium, or low in descending order.
  graphql:
    typeName: customers
    inputTypeName: customers_input
  dataConnectorTypeMapping:
    - dataConnectorName: my_postgres
      dataConnectorObjectType: customers

---
kind: TypePermissions
version: v1
definition:
  typeName: customers
  permissions:
    - role: admin
      output:
        allowedFields:
          - account
          - address
          - blacklisted
          - customer_id
          - dob
          - name
          - nationality
          - pep_status
          - risk_level

---
kind: BooleanExpressionType
version: v1
definition:
  name: customers_bool_exp
  operand:
    object:
      type: customers
      comparableFields:
        - fieldName: account
          booleanExpressionType: int_4_bool_exp
        - fieldName: address
          booleanExpressionType: text_bool_exp
        - fieldName: blacklisted
          booleanExpressionType: bool_bool_exp_1
        - fieldName: customer_id
          booleanExpressionType: int_4_bool_exp
        - fieldName: dob
          booleanExpressionType: date_bool_exp
        - fieldName: name
          booleanExpressionType: varchar_bool_exp
        - fieldName: nationality
          booleanExpressionType: varchar_bool_exp
        - fieldName: pep_status
          booleanExpressionType: bool_bool_exp_1
        - fieldName: risk_level
          booleanExpressionType: varchar_bool_exp
      comparableRelationships:
        - relationshipName: sars
  logicalOperators:
    enable: true
  isNull:
    enable: true
  graphql:
    typeName: customers_bool_exp

---
kind: AggregateExpression
version: v1
definition:
  name: customers_agg_exp
  operand:
    object:
      aggregatedType: customers
      aggregatableFields:
        - fieldName: account
          aggregateExpression: int_4_agg_exp
        - fieldName: address
          aggregateExpression: text_agg_exp
        - fieldName: blacklisted
          aggregateExpression: bool_agg_exp
        - fieldName: customer_id
          aggregateExpression: int_4_agg_exp
        - fieldName: dob
          aggregateExpression: date_agg_exp
        - fieldName: name
          aggregateExpression: varchar_agg_exp
        - fieldName: nationality
          aggregateExpression: varchar_agg_exp
        - fieldName: pep_status
          aggregateExpression: bool_agg_exp
        - fieldName: risk_level
          aggregateExpression: varchar_agg_exp
  count:
    enable: true
    returnType: int_64
  graphql:
    selectTypeName: customers_agg_exp

---
kind: OrderByExpression
version: v1
definition:
  name: customers_order_by_exp
  operand:
    object:
      orderedType: customers
      orderableFields:
        - fieldName: account
          orderByExpression: int_32_order_by_exp
        - fieldName: address
          orderByExpression: string_order_by_exp
        - fieldName: blacklisted
          orderByExpression: boolean_order_by_exp
        - fieldName: customer_id
          orderByExpression: int_32_order_by_exp
        - fieldName: dob
          orderByExpression: date_order_by_exp
        - fieldName: name
          orderByExpression: string_order_by_exp
        - fieldName: nationality
          orderByExpression: string_order_by_exp
        - fieldName: pep_status
          orderByExpression: boolean_order_by_exp
        - fieldName: risk_level
          orderByExpression: string_order_by_exp
      orderableRelationships: []
  graphql:
    expressionTypeName: customers_order_by_exp

---
kind: Model
version: v2
definition:
  name: customers
  objectType: customers
  source:
    dataConnectorName: my_postgres
    collection: customers
  filterExpressionType: customers_bool_exp
  aggregateExpression: customers_agg_exp
  orderByExpression: customers_order_by_exp
  description: Customer table that includes PEP status, risk level, account id stored as account, and if they are blacklisted.
  graphql:
    selectMany:
      queryRootField: customers
      subscription:
        rootField: customers
    selectUniques:
      - queryRootField: customers_by_customer_id
        uniqueIdentifier:
          - customer_id
        subscription:
          rootField: customers_by_customer_id
    filterInputTypeName: customers_filter_input
    aggregate:
      queryRootField: customers_aggregate
      subscription:
        rootField: customers_aggregate

---
kind: ModelPermissions
version: v1
definition:
  modelName: customers
  permissions:
    - role: admin
      select:
        filter: null
        allowSubscriptions: true

---
kind: Relationship
version: v1
definition:
  name: sars
  sourceType: customers
  target:
    model:
      name: sars
      relationshipType: Array
      aggregate:
        aggregateExpression: sars_agg_exp
  mapping:
    - source:
        fieldPath:
          - fieldName: customer_id
      target:
        modelField:
          - fieldName: customer_id
  graphql:
    aggregateFieldName: sars_aggregate

